                    android:layout_height="wrap_content"
                    />-->


                <Button
                    android:id="@+id/btnhome_billingFragment"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="35dp"

                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundededgebox_buttongreen_sec"
                    android:text="Home"
                    android:textColor="@color/COLOR_BLACK"
                    android:textStyle="bold" />


                <Button
                    android:id="@+id/btnsearch_billingFragment"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/roundededgebox_buttongreen"
                    android:text="Search"
                    android:textColor="@color/COLOR_BLACK"
                    android:textStyle="bold" />
            </LinearLayout>

        </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:gravity="right"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <Button
                            android:id="@+id/ButtonJobReassign"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/buttonJobAccepted"
                            android:text="@string/ioperation_reassign" />

                        <Button
                            android:id="@+id/buttonJobAccepted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toLeftOf="@+id/buttonJobRejected"
                            android:text="@string/ioperation_accept"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/buttonJobRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ioperation_reject"
                            android:visibility="gone" />
                    </RelativeLayout>
                </RelativeLayout>


                <LinearLayout
                    android:id="@+id/LLNoDataAssigment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_model_no_data_found"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/TextViewDialogCountDownIdle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="30dp"
                        android:text="@string/no_data_found"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/hlBottom_iOperationFragment"
        android:layout_below="@+id/llTOp_iOperationFragment"

        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LLNoDataAssigment_ToDoFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_model_no_data_found"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:id="@+id/TextViewDialogCountDownIdle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="30dp"
                android:text="@string/no_data_found"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <ListView
            android:id="@+id/lsv_claim_unclaim_billingFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/hlBottom_iOperationFragment"
            android:clickable="true"
            android:divider="@null"
            android:dividerHeight="0dip"
            android:drawSelectorOnTop="true"
            android:focusable="true" />


        <HorizontalScrollView
            android:id="@+id/hlBottom_iOperationFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fillViewport="true"

            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/hlBottom_ToDoFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#99005B93"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!--<Button-->
                    <!--android:id="@+id/ButtoniOpFirst"-->
                    <!--android:layout_width="125dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_weight="1"-->
                    <!--android:text="@string/iop_first" />-->

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/tv_showjob_billingFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text=" Jobs(show) : 0"
                            android:layout_marginLeft="10dp"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/COLOR_WHITE"
                            android:textSize="25sp" />

                        <TextView
                            android:id="@+id/tv_total_billingFragment"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical|right"
                            android:text="Total : $ 0.00"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/COLOR_WHITE"
                            android:textSize="25sp" />


                    </LinearLayout>


                    <!--<Button-->
                    <!--android:id="@+id/ButtoniOpLast"-->
                    <!--android:layout_width="125dp"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="@string/iop_last" />-->

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tv_no_show_billingFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="Jobs (No Shows) : 0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/COLOR_WHITE"
                            android:textSize="25sp" />


                        <TextView
                            android:id="@+id/tv_unhandled_billingFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp"
                            android:text="Unhandled : 0"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/COLOR_WHITE"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <Button
                            android:layout_width="240dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginLeft="5dp" android:id="@+id/btn_submit_claims_billing"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/roundededgebox_buttongreen_sec"
                            android:padding="9dp"
                            android:text="Submit Claims"
                            android:textColor="@color/COLOR_WHITE"
                            android:textSize="25sp" />


                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </HorizontalScrollView>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LLRootLoading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#88777777"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/roundededgebox2"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Loading"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
