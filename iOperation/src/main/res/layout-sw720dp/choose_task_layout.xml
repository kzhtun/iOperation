<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_model5"
    android:gravity="top"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/LLTopText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="IOPS Main Screen"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="35sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_below="@id/LLTopText"
        android:layout_marginBottom="20dp" >

        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Welcome : Terence"
            android:textColor="@color/COLOR_BLACK"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" >

        </LinearLayout>

        <TextView
            android:id="@+id/textViewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:text="10 April, 2013 10:30 AM"
            android:textColor="@color/COLOR_BLACK"
            android:textSize="25sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLMainMenu"
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_below="@id/LLHeader"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/ButtonTaskiOperation"
            android:layout_width="430dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundededgebox_buttongreen"
            android:text="@string/main_menu2"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <Button
            android:id="@+id/ButtonTaskiBidding"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundededgebox_buttongreen"
            android:text="@string/main_menu3"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

        <Button
            android:id="@+id/buttonTaskFeedback"
            android:layout_width="210dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundededgebox_buttongreen"
            android:text="@string/main_menu4"
            android:textColor="#FFFFFF"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
         android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LLMainMenu"
        android:gravity="center"
        >

        <Button
            android:id="@+id/ButtonChangePassword"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundededgebox_buttongreen"
            android:text="@string/main_menu1"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

        <Button
            android:id="@+id/ButtonLogOut"
            android:layout_width="280dp"
            android:layout_height="65dp"
            android:layout_margin="10dp"
            android:background="@drawable/roundededgebox_buttongreen"
            android:text="@string/main_menu5"
            android:textColor="#FFFFFF"
            android:textSize="25sp" />

    </LinearLayout>

     <ImageView
        android:id="@+id/imageViewRefresh"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/refresh" />

</RelativeLayout>