    <LinearLayout
        android:id="@+id/llBottom_WelcomeIbidding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/COLOR_BLUE_BG"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:background="@color/COLOR_ITEM_IBIDDING_DETAILS"
            android:gravity="center_vertical|center"
            android:padding="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="&lt;"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/COLOR_YELLOW"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/tvPageNo_WelcomeIbidding"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1/20"
                android:textColor="@color/COLOR_YELLOW"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="&gt;"
                android:layout_marginRight="70dp"
                android:layout_marginBottom="10dp"
                android:textColor="@color/COLOR_YELLOW"
                android:textSize="50sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/COLOR_BLUE_BG"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btAccept_WelcomeIbidding"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:text="Accept"
                android:textSize="25sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btReject_WelcomeIbidding"
                android:layout_width="0dp"
                android:layout_height="55dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:text="Reject"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLRootLoading_WelcomeIbidding"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerInParent="true"
        android:background="#88777777"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/roundededgebox2"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Loading"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>