        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/llBottom_WelcomeIbidding"
        android:layout_below="@+id/llTopLayout_WelcomeIbidding"
        android:background="@color/COLOR_ITEM_IBIDDING_DETAILS"
        android:orientation="vertical"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textSize="20sp"
                        android:text="Pickup: "
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPickup_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_WHITE"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textSize="20sp"
                        android:text="Alight: "
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAlight_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_WHITE"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Hotel: "
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvHotel_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/COLOR_WHITE"
                        android:textSize="20sp"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:textSize="20sp"
                        android:text="Flight: "
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvFlight_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_WHITE"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Type: "
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvType_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:layout_marginLeft="90dp"
                        android:textColor="@color/COLOR_WHITE"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Amount: "
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAmount_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_WHITE"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Contact: "
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvContact_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_WHITE"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Phone: "
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvPhone_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/COLOR_WHITE"
                        android:textSize="20sp"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Description: "
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDesc_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/COLOR_WHITE"
                        android:textSize="20sp"
                        android:layout_marginLeft="90dp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="Remarks: "
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvRemarks_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/COLOR_WHITE"
                        android:layout_marginLeft="90dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="TPT Note: "
                        android:textSize="20sp"
                        android:textColor="@color/COLOR_GREEN_ITEM"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvtptNote_WelcomeIbidding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/COLOR_WHITE"
                        android:layout_marginLeft="90dp"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
