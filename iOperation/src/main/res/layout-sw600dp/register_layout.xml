<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_model5"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/LLRegisterContainerLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Register_welcome"
            android:textColor="@color/COLOR_WHITE"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center" >

            <LinearLayout
                android:id="@+id/LLLoginContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/roundededgebox1"
                android:orientation="vertical"
                android:padding="20dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterSupplierName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="27dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_suppliername" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText android:textSize="27dp"
                        android:id="@+id/EditTextRegisterAddress"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/Register_address" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterPostalCode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:textSize="27dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_postalcode" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextCountryCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/Register_countrycode"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textSize="27dp"
                            android:layout_weight="1"
                            android:text="Country*" />

                        <Spinner
                            android:id="@+id/spinnerRegisterCountry"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/TextViewDialogCountDownIdle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" android:textSize="27dp"
                            android:text="City*" />

                        <Spinner
                            android:id="@+id/spinnerRegisterCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/EditTextRegisterCityCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/Register_citycode"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterState"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:textSize="27dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_state" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterContactPerson1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:textSize="27dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_contactperson1" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterConPerEmail1"
                        android:layout_width="0dp" android:textSize="27dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/Register_email_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterConPerTel1" android:textSize="27dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/Register_telephone_no_1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterContactPerson2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:textSize="27dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_contactperson2" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterConPerEmail2" android:textSize="27dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/Register_email_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterConPerTel2"
                        android:layout_width="0dp" android:textSize="27dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/Register_telephone_no_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterContactPerson3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:textSize="27dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_contactperson3" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterConPerEmail3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:textSize="27dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_email_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterConPerTel3"
                        android:layout_width="0dp" android:textSize="27dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="@string/Register_telephone_no_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editTextRegisterContactPerson4"
                        android:layout_width="0dp" android:textSize="27dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_contactperson4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editTextRegisterConPerEmail4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:textSize="27dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_email_4" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/editTextRegisterConPerTel4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:textSize="27dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_telephone_no_4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/EditTextRegisterFaxNo"
                        android:layout_width="0dp" android:textSize="27dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="25dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight="1"
                        android:hint="@string/Register_fax_no" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <CheckBox
                        android:id="@+id/checkBoxRegisterTNC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/textViewRegisterTNC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Register_tnc"
                        android:textColor="@color/COLOR_BLACK"
                        android:textSize="27sp"
                        android:textStyle="italic" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/buttonRegisterSubmit"
                        android:layout_width="fill_parent"
                        android:layout_height="55dip"
                        android:layout_marginTop="10dp"
                        android:textSize="22sp"
                        android:background="@drawable/roundededgebox3"
                        android:text="@string/Register_submit"
                        android:textColor="@color/COLOR_WHITE" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>