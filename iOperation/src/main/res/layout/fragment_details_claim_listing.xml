<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.info121.ioperation.fragment.ReviewClaimsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0074BD"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Review Claims :"
                    android:textColor="@color/COLOR_WHITE"
                    android:textSize="25dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:layout_weight="1"
                        android:text=" Claims No :"
                        android:textColor="@color/COLOR_GREEN"
                        android:textSize="12dp"

                        />

                    <TextView
                        android:id="@+id/tv_claim_no_fragment_review_claims"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=""
                        android:textColor="@color/COLOR_WHITE"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Co :"


                        android:textColor="@color/COLOR_GREEN"
                        android:textSize="12dp" />


                    <TextView
                        android:id="@+id/tv_co_reviewclaimsfragment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="baba Express Service"
                        android:textColor="@color/COLOR_WHITE"
                        android:textSize="12dp" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:text="Submmited By :"
                        android:textColor="@color/COLOR_GREEN"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/tv_submmited_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="baba"
                        android:textColor="@color/COLOR_WHITE"
                        android:textSize="12dp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="Date :"
                        android:textColor="@color/COLOR_GREEN"
                        android:textSize="12dp" />



                    <TextView
                        android:id="@+id/tv_date_review_claims"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="24 Aug 2016 17:30"
                        android:textColor="@color/COLOR_WHITE"
                        android:textSize="12dp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/COLOR_BLACK"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <!--   <HorizontalScrollView
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:fillViewport="true"
                       android:scrollbarAlwaysDrawHorizontalTrack="true">-->

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_detailsListing"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="vertical"
                    android:visibility="visible" />

                <!--</HorizontalScrollView>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/COLOR_BLUE"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Total Job $ :"
                    android:textColor="@color/COLOR_WHITE"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_jobtotalamt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="190.00"
                    android:textColor="@color/COLOR_WHITE"
                    android:textSize="12dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="Total Claim $ :"
                    android:textColor="@color/COLOR_WHITE"
                    android:textSize="12dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tvclaimtotalamt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:text="60.00"
                    android:textColor="@color/COLOR_WHITE"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/COLOR_WHITE"></View>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00629F"
                android:orientation="horizontal"
                android:padding="25dp">

                <Button
                    android:id="@+id/btnbackunclaimed"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginRight="15dp"
                    android:layout_weight="1"
                    android:background="#7FDD3E"
                    android:text="Back To Unclaimed "
                    android:textColor="@color/COLOR_BLACK"
                    android:textSize="12dp"
                    android:textStyle="bold" />



                <Button
                    android:id="@+id/btnsubmit"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:background="#7FDD3E"
                    android:text="Confirm  Claim "
                    android:textColor="@color/COLOR_BLACK"
                    android:textSize="12dp"
                    android:textStyle="bold" />

            </LinearLayout>


            <HorizontalScrollView
                android:id="@+id/hlBottom_iOperationFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/COLOR_LIGHT_BLUE"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/hlBottom_ToDoFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!--<Button-->
                        <!--android:id="@+id/ButtoniOpFirst"-->
                        <!--android:layout_width="125dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_weight="1"-->
                        <!--android:text="@string/iop_first" />-->

                        <Button
                            android:id="@+id/ButtoniOpPrevious"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/iop_previous" />

                        <EditText
                            android:id="@+id/editTextiOpPage"
                            android:layout_width="150dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:background="@drawable/header_model8"

                            android:gravity="center"
                            android:hint="1 of 1"
                            android:inputType="number" />


                        <Button
                            android:id="@+id/ButtoniOpGo"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"

                            android:text="@string/iop_go" />

                        <Button
                            android:id="@+id/ButtoniOpNext"
                            android:layout_width="125dp"
                            android:layout_height="wrap_content"
                            android:text="@string/iop_next" />

                        <!--<Button-->
                        <!--android:id="@+id/ButtoniOpLast"-->
                        <!--android:layout_width="125dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="@string/iop_last" />-->

                    </LinearLayout>
                </LinearLayout>


            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
