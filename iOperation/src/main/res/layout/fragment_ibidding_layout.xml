                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="iBidding"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/ButtonShortcutiOpFeedback"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Feedback"
                    android:textSize="14sp"
                    android:visibility="gone" />

