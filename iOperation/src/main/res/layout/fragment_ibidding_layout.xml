    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/hlBottom_iBiddingFragment"
        android:layout_below="@+id/llTop_iBiddingFragment"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/LLNoDataAssigment_iBiddingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llTop_ToDoFragment"
            android:background="@drawable/header_model_no_data_found"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="@string/no_data_found"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/LLNoDataAssigment_iBiddingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llTop_ToDoFragment"
            android:background="@drawable/header_model_no_data_found"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/TextViewDialogCountDownIdle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:gravity="center"
                android:text="@string/no_data_found"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </LinearLayout>

        <ListView
            android:id="@+id/listView_iBiddingFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:divider="@null"
            android:dividerHeight="0dip"
            android:drawSelectorOnTop="true"
            android:focusable="true"
            android:visibility="visible"></ListView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LLRootLoading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#88777777"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/roundededgebox2"
            android:gravity="center"
            android:orientation="vertical">

            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="Loading"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <HorizontalScrollView
        android:id="@+id/hlBottom_iBiddingFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/COLOR_LIGHT_BLUE"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <!--<Button-->
                        <!--android:id="@+id/ButtoniBidFirst"-->
                        <!--android:layout_width="125dp"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:text="@string/iop_first" />-->

                    <Button
                        android:id="@+id/ButtoniBidPrevious"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/iop_previous" />

                    <EditText
                        android:id="@+id/editTextiBidPage"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/header_model8"
                        android:gravity="center"
                        android:inputType="number"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp" />

                    <Button
                        android:id="@+id/ButtoniBidGo"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/iop_go" />


                    <Button
                        android:id="@+id/ButtoniBidNext"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:text="@string/iop_next" />

                    <!--<Button-->
