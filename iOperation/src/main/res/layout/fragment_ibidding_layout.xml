                        <Button
                            android:id="@+id/buttonBidAccepted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Accept"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/buttonBidRejected"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Reject"
                            android:textSize="14sp" />

                    </RelativeLayout>
                </RelativeLayout>


            </LinearLayout>
