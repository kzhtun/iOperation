<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="850dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="5dp"
        android:background="@drawable/roundededgeboxdialog"
        android:padding="15dp" >

        <!-- android:inputType="textMultiLine" -->

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerInParent="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/LLJobDetailContainer"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/TextViewServerUrl1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:lines="1"
                                android:singleLine="true"
                                android:text="URL #1"
                                android:textColor="@color/COLOR_BLACK"
                                android:textSize="18dip"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/editTextServerNo1"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" >

                                <requestFocus />
                            </EditText>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/TextViewServerUrl2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:singleLine="true"
                                android:text="URL #2"
                                android:textColor="@color/COLOR_BLACK"
                                android:textSize="18dip"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/editTextServerNo2"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/TextView01"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp"
                                android:singleLine="true"
                                android:text="Password"
                                android:textColor="@color/COLOR_BLACK"
                                android:textSize="18dip"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/EditTextUpdateServerPassword"
                                android:layout_width="300dp"
                                android:inputType="textPassword"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/LLJobDetailButtonContainer"
                    android:layout_width="match_parent"
                    android:weightSum="2"
                    android:layout_height="wrap_content" >

                    <Button
                        android:id="@+id/ButtonServerUpdate"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dip"
                        android:layout_marginBottom="3dip"
                        android:layout_marginRight="10dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/action_button_empty_cream"
                        android:text="Update"
                        android:textColor="@color/COLOR_BLACK"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ButtonServerClose"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="30dip"
                        android:layout_marginBottom="3dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/action_button_empty_cream"
                        android:text="Close"
                        android:textColor="@color/COLOR_BLACK"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/TextViewServerLastUpdated"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    
                    android:singleLine="true"
                    android:text="Last Updated : -"
                    android:textColor="@color/COLOR_BLACK"
                    android:textSize="18dip"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

</RelativeLayout>